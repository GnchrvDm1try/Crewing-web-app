@model Crewing.Models.ReviewCreationModel

<h4>Оставить отзыв о @Model.Companyname</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" rows="5" cols="40" class="form-control" required></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Estimation" class="control-label"></label>
                <input asp-for="Estimation" type="number" value="3" min="1" max="5" class="form-control" required/>
            </div>
            <input asp-for="Companyname" type="hidden" value="@Model.Companyname" readonly required/>
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-primary" />
            </div>
        </form>
    </div>
    @if(ViewBag.IsValid == false)
    {
        @Html.ValidationSummary()
    }
</div>

<hr />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
